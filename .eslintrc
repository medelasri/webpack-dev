{
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": "standard",
    "rules": {
        "indent": ["error", 4],
        "arrow-parens": 0,
        "generator-star-spacing": 0,
        "no-debugger": 0,
        "no-new": 0,
        "comma-dangle": [0]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "DEVELOPMENT": true,
        "PRODUCTION": true
    }
}